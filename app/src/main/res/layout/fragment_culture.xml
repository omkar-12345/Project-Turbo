<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pasco"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".culture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/his_and_hes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E4D4BB"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/shaniwarwada"
                        android:contentDescription="TODO" />


                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="History and Heritage"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/festival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            android:backgroundTint="#E4D4BB"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/cul1" />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card2"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Festivals and Celebrations"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/museumCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E4D4BB"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/edu_sppu" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card4"
                        android:layout_width="match_parent"
                        android:layout_height="77dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Language and Literature"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>






            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/hillsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E4D4BB"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/edu_sppu" />


                </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card5"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Education and Intellectual Hub"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/historical_places_cradView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E4D4BB"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/arts1" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card6"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Performing Arts"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E4D4BB"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/food2" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Cuisine"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E4D4BB"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="left"
                        android:src="@drawable/lifestyle" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Social and Environmental"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
