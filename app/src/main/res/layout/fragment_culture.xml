<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pasco"
    tools:context=".culture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/his_and_hes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:backgroundTint="#E4D4BB"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="132dp"
                        android:layout_height="86dp"
                        android:layout_gravity="start"
                        android:contentDescription="TODO"
                        android:src="@drawable/h_h"
                         />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="History and Heritage"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/festival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:backgroundTint="#E4D4BB"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="89dp"
                        android:layout_gravity="start"
                        android:src="@drawable/cul1"
                       />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card2"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Festivals and Celebrations"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lang_literature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:backgroundTint="#E4D4BB"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="70dp"
                        android:layout_gravity="start"
                        android:src="@drawable/l_l"
                        />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card3"
                        android:layout_width="match_parent"
                        android:layout_height="77dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/yatra"
                        android:gravity="center"
                        android:text="Language and Literature"
                        android:textColor="#C2185B"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:backgroundTint="#E4D4BB"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
